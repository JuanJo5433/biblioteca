generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id             Int        @id @default(autoincrement())
  fullName       String
  email          String      @unique
  password       String
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}


model Admins {
  id             Int        @id @default(autoincrement())
  name           String
  documentType   String
  codeDocument   Int 
  address        String
  phone          String
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}


model Librarians {
  id              Int         @id @default(autoincrement())
  name            String
  charge          String
  phone           String
  workingHours    String
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model Clients {
  id             Int       @id @default(autoincrement())
  documentType   String
  codeDocument   Int 
  address        String
  phone          String
  Loans          Loans[]
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

model Books {
  id                     Int       @id @default(autoincrement())
  ISBN                   String    @unique
  title                  String
  subtitle               String?
  edition                String
  editorial              String
  placePublication       String
  yearPublication        Int
  status                 Boolean
  acquisitionDate        DateTime
  purchasePrice          Float
  rentalPrice            Float
  categoryId             Int 
  category               Categories  @relation(fields: [categoryId], references: [id])
  authorId               Int
  author                 Authors     @relation(fields: [authorId], references: [id])
  Loans                  Loans[]
  createdAt              DateTime    @default(now())
  updatedAt              DateTime    @updatedAt
}

model Categories {
  id          Int         @id @default(autoincrement())
  name        String        
  Books       Books[]
}

model Authors {
  id              Int         @id @default(autoincrement())
  name            String
  literaryGender  String?
  Books       Books[]
}

model Loans {
  id                          Int         @id @default(autoincrement())
  loanDate                    DateTime
  expectedReturnDate          DateTime
  realReturnDate              DateTime?
  status                      Boolean
  multa                       Float
  clientId                    Int
  client                      Clients     @relation(fields: [clientId], references: [id])
  bookId                      Int
  book                        Books       @relation(fields: [bookId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}






